<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tutorial.greeting"
            android:layout_margin="5dp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tutorial.graph_activity.head"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tutorial.graph_activity"
            android:layout_margin="5dp"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="300dp"
            android:layout_height="600dp"
            android:layout_margin="5dp"
            android:background="@drawable/graph_activity"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tutorial.settings_activity.head"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tutorial.settings_activity"
            android:layout_margin="5dp"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="297dp"
            android:layout_height="600dp"
            android:layout_margin="5dp"
            android:background="@drawable/settings_activity"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tutorial.conclusion"
            android:layout_margin="5dp"
            android:textColor="@color/black"/>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/back_button"
            android:src="@drawable/back_button_image"
            android:layout_margin="5dp"
            tools:ignore="ContentDescription"/>

    </LinearLayout>

</ScrollView>